 filter:alpha(opacity=40); 针对 IE8 以及更早的版本 */
 body{
 	font-size: 16Px;
 }

.header
	height 48px
	overflow hidden
	.wrap
		transform translate(0, -50%)
		transition 0.3s
		&.active
			transform translate(0, 0)
	.search-box
	.default
		height 48px
	.search-box
		display flex
		.close
		.search
			width 48px
			background none
			outline none
			border none
			display flex
			align-items center
			justify-content center
			img
				width 44px
		.search
			background url('../img/67646445cb3cc0ee059a4f6712fbaa33-44+44.svg') left center/44px auto no-repeat
		.text
			flex 1 1 auto 
			border none
			outline none
			font-size 12px
			padding-left 20px
			box-sizing border-box
			&::placeholder
				font-size 12px
				color #9b9b9b
		input
			height 100%
	.default
		display flex
		justify-content space-between
		.search
		.user
			width 48px
			display flex
			align-items center
			justify-content center
			img
				display block
				width 44px
		.brand
			display flex
			align-items center
			justify-content center
			img
				display block
				height 40px
.nav
	display flex
	font-size 14px
	color #000000
	line-height 40px
	text-align center
	border-top 1px solid #d8d8d8
	border-bottom 1px solid #d8d8d8
	a
		display block
		flex 1
		display flex
		span
			display block
			margin 0 auto
	.menu
		padding-right 20px
		background url('../img/82bfa42ab12f5da394c7a585f67e7e41-44+44.svg') right center/20px auto no-repeat

.main
	.banner
		a
		img
			display block
			width 100%
		.swiper-pagination
			span
				background #fff
				&.swiper-pagination-bullet-active
					opacity 1
	.child-menu
		padding 16px 8px
		a
			margin 8px
			display flex
			width 126px
			height 48px
			align-items center
			justify-content center
			font-size 16px
			color #000000
			border-radius 7px
			background #efefef
			img
				display block
				width 32px
			